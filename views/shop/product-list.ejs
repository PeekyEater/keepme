<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= product.Title %>
                    </h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.Cover %>" alt="<%= product.Title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$
                        <%= product.Price %>
                    </h2>
                    <p class="product__description">
                        Pages: <%= product.Pages %>
                    </p>
                </div>
                <div class="card__actions">
                    <a href="/product/<%= product.IdBook %>" class="btn">Details</a>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <footer>
        <header class="main-header">
            <nav class="main-header__nav">
                <h3 class="pageNumber">Page <%= pageNumber %></h3>
                <ul class="main-header__item-list">
                    <li class="main-header__item">
                        <a class="<% if(pageNumber < 2) { %>hidden<% } %>"
                            href="/products/<%= pageNumber - 1 %>">Prev</a>
                    </li>
                    <li class="main-header__item">
                        <a href="/products/<%= pageNumber - -1 %>">Next</a>
                    </li>
                    <li class="main-header__item first">
                        <a class="<% if(pageNumber < 2) { %>hidden<% } %>" href="/products/1">First page</a>
                    </li>
                </ul>
            </nav>
        </header>
    </footer>
    <%- include('../includes/end.ejs') %>