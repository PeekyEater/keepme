<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="main">
        <div class="flex">
            <form class="form" action="<% if (editMode) { %>/edit-reminder<% } else { %>/add-reminder<% } %>"
                method="POST">
                <div class="container">
                    <h1 class="title"><% if (editMode) { %>Edit Reminder<% } else { %>Remind me to:<% } %></h1>
                    <div class="form-control">
                        <span class="note-remind-title"><%= note.dataValues.title %></span>
                        <span class="note-remind-description"><%= note.dataValues.text %></span>
                    </div>
                    <div class="form-control">
                        <img class="icon" src="/img/reminder.svg" alt="brush">
                        <input value="<% if (editMode) { %><%= reminder.remindText %><% } %>" class="input input-white" type="text"
                            name="remindText" id="remindText" placeholder="remindText">
                    </div>
                    <div class="form-control">
                        <label class="label" for="description">Remind date:</label>
                        <input value="<% if (editMode) { %><%= reminder.timestamp %><% } %>" class="input input-white" type="date"
                            name="timestamp" id="timestamp">
                    </div>
                    <input value="<%= note.dataValues.id %>" type="hidden" name="noteId">
                    <% if (editMode) { %>
                    <input value="<%= reminder.id %>" type="hidden" name="reminderId">
                    <% } %>
                    <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                    <% } %>
                    <button class="btn login-button" type="submit"><% if (editMode) { %>Submit<% } else { %>Add
                        Reminder<% } %></button>
                </div>
            </form>

        </div>
    <div class="mobile-offset"></div>
</main>
    <%- include('../includes/end.ejs') %>