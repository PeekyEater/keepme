<%- include('../includes/head.ejs') %>
</head>

<body>

    <main>
        <div class="form-wrapper">
            <form class="login-form" action="/auth/signup" method="POST">
                <h1 class="title">Sign Up!</h1>
                <div class="form-control">
                    <img class="icon" src="/img/mail.svg" alt="Login">
                    <input value="<% if (email) { %><%= email %><% } %>" class="input" type="email" name="email" id="email" placeholder="E-Mail">
                </div>
                <div class="form-control">
                    <img class="icon" src="/img/name.svg" alt="Login">
                    <input value="<% if (login) { %><%= login %><% } %>" class="input" type="text" name="login" id="login" placeholder="Login">
                </div>
                <div class="form-control">
                    <img class="icon" src="/img/lock.svg" alt="Login">
                    <input class="input" type="password" name="password" id="password"  placeholder="Password">
                </div>
                <div class="form-control">
                    <img class="icon" src="/img/correct.svg" alt="Login">
                    <input class="input" type="password" name="confirmPassword" id="confirm-password"  placeholder="Confirm Password">
                </div>
                <% if (errorMessage) { %>
                <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>
                <button class="btn login-button" type="submit">Sign Up!</button>
                <div class="sign-up-link-container">
                    <a class="sign-up-link" href="/auth/login">Already have an Account?</a>
                </div>
            </form>
        </div>
    <div class="mobile-offset"></div>
</main>
    <%- include('../includes/end.ejs') %>