<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="main">
        <div class="flex">
            <form class="form" action="<% if (editMode) { %>/admin/edit-color<% } else { %>/admin/add-color<% } %>"
                method="POST">
                <h1 class="title"><% if (editMode) { %>Edit Color<% } else { %>Add new color<% } %></h1>
                <div class="form-control">
                    <img class="icon" src="/img/brush.svg" alt="brush">
                    <input value="<% if (editMode) { %><%= color.dataValues.name %><% } %>" class="input input-white"
                        type="text" name="name" id="name" placeholder="Name">
                </div>
                <div class="form-control">
                    <img class="icon" src="/img/hash.svg" alt="hash">
                    <input value="<% if (editMode) { %><%= color.dataValues.hash %><% } %>" class="input input-white"
                        type="text" name="hash" id="hash" placeholder="Hash">
                </div>
                <% if (errorMessage) { %>
                <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>
                <% if (editMode) { %>
                <input value="<%= color.dataValues.id %>" type="hidden" name="colorId">
                <% } %>
                <button class="btn login-button" type="submit"><% if (editMode) { %>Submit<% } else { %>Add
                    Color<% } %></button>
            </form>

        </div>

    </main>
    <%- include('../includes/end.ejs') %>